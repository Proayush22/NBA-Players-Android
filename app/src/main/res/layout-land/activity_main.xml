<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/textViewHeaderL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20sp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textViewRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.815"
            android:text="Rank" />

        <TextView
            android:id="@+id/textViewPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Player" />

        <TextView
            android:id="@+id/textViewDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.508"
            android:text="Draft" />

        <TextView
            android:id="@+id/textViewQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Queue" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.6"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewHeaderL">

        <ListView
            android:id="@+id/list_id"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingHorizontal="5sp" />

        <ScrollView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2.6"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingHorizontal="10sp"
                    android:paddingBottom="5sp"
                    android:text="Fantasy Scoring Guide"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewStats"
                    android:padding="4sp"
                    android:text="Point Scored: 1 point" />

                <TextView
                    android:id="@+id/textViewWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewHeight"
                    android:padding="4sp"
                    android:text="Three-point made: 1 point" />

                <TextView
                    android:id="@+id/textViewAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewWeight"
                    android:padding="4sp"
                    android:text="Field goal attempted: -1 point" />

                <TextView
                    android:id="@+id/textViewPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewAge"
                    android:padding="4sp"
                    android:text="Free Throw made: 1 point" />

                <TextView
                    android:id="@+id/textViewRebounds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewPoints"
                    android:padding="4sp"
                    android:text="Free Throw attempted: -1 point" />

                <TextView
                    android:id="@+id/textViewAssists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewRebounds"
                    android:padding="4sp"
                    android:text="Rebound: 1 point" />

                <TextView
                    android:id="@+id/textViewSteals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewAssists"
                    android:padding="4sp"
                    android:text="Assist: 2 points" />

                <TextView
                    android:id="@+id/textViewBlocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewSteals"
                    android:padding="4sp"
                    android:text="Steal: 4 points" />

                <TextView
                    android:id="@+id/textViewTurnovers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewBlocks"
                    android:padding="4sp"
                    android:text="Block: 4 points" />

                <TextView
                    android:id="@+id/textViewFGP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTurnovers"
                    android:padding="4sp"
                    android:text="Turnover: -2 points" />

                <TextView
                    android:id="@+id/textViewFTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewFGP"
                    android:padding="4sp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView3PP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewFTP"
                    android:padding="4sp"
                    android:text="" />

                <TextView
                    android:id="@+id/textViewGamesPlayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView3PP"
                    android:padding="4sp"
                    android:text="" />
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>